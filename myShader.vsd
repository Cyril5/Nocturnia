#version 330 core
layout (location = 0) in vec3 aPos; // La variable aPos a l'attribut de position 0
layout (location = 1) in vec2 aTexCoord; // La variable aTextCoord a l'attribut de position 2
  
out vec2 texCoord;

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

void main()
{
    
    gl_Position = projection * view * model * vec4(aPos, 1.0f); // un vec3 est utilisé pour construire un vec4
    
    texCoord = vec2(aTexCoord.x, aTexCoord.y);
}